<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body">
          
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form col-md-12 center-block") do |f| %>
  
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
  </div>
            <div class="form-group">
		<%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
              <span class="pull-right"><%= render "devise/shared/links" %></span>
            </div>

          </form>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
		  </div>	
      </div>
  </div>
  </div>
</div>